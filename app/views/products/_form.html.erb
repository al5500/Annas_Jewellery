<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="product-form">
  <div class="field">
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "50x5" %>
  </div>
  <div class="field cl_wham">
    <%= f.label :Image %>
    <%= f.file_field :file %>
  </div>
  <div class="field cl_wham">
    <%= f.label :image_one %>
    <%= f.file_field :image_one %>
  </div>
  <div class="field cl_wham">
    <%= f.label :image_two %>
    <%= f.file_field :image_two %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    $<%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, Category.all.map {|category|[category.name, category.id]}, :include_blank => true %>
  </div>
  <div class="field cb">
    <%= f.check_box :highlighted %>
    <%= f.label :highlighted %> 
  </div>
  <div class="field cb">
    <%= f.check_box :available %>
    <%= f.label :available %>
  </div>
  <div class="field cb">
    <%= f.check_box :on_sale %>
    <%= f.label :on_sale %> 
  </div>
  <div class="field">
    <%= f.label :list_price %> <br>
    $<%= f.text_field :list_price %>
  </div>
  <div class="field">
    <%= f.label :postage %> <br>
    $<%= f.text_field :postage %>
  </div>
  <div class="field">
    <%= f.label :quantity %> <br>
    <%= f.number_field :quantity %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success"%>
  </div>
  </div>
<% end %>
