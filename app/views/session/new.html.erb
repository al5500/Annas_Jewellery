<h1>Login</h1>
<%= form_tag '/login' do %>

  <p>
    <%= label_tag 'email' %>
    <%= email_field_tag 'email' %>
  </p>

  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>
  
  <p>
    <%= submit_tag 'Login', :class => "btn btn-success" %>
  </p>
  <p>
    <%= link_to "forgotten password?", new_password_reset_path %>
  </p>
<% end %>
